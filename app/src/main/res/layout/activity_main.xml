<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Data"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_alignParentStart="true"/>
 <LinearLayout
     android:layout_alignParentRight="true"
     android:layout_width="wrap_content"
     android:layout_marginRight="5dp"
     android:orientation="horizontal"
     android:layout_height="wrap_content">
     <ImageView
        android:layout_margin="5dp"
         android:onClick="getDetailsImage"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_insert_chart_black_24dp"/>

     <ImageView
         android:layout_margin="5dp"
              android:id="@+id/addOn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_note_add_black_24dp"/>


     <ImageView
         android:layout_margin="5dp"
                android:onClick="Reloadthedata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_autorenew_black_24dp"
                android:id="@+id/btnload"/>
 </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_margin="3dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:showDividers="middle"
            android:dividerPadding="1dp"
            android:weightSum="1"
            android:divider="?android:attr/dividerVertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parametre"
                android:textColor="@android:color/black"/>
            <TextView
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Values"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:orientation="horizontal"/>
        <LinearLayout

            android:showDividers="middle"
            android:dividerPadding="1dp"
            android:weightSum="1"
            android:divider="?android:attr/dividerVertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="@android:color/black"/>
            <TextView
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"/>
        </LinearLayout>
        <LinearLayout
            android:divider="?android:attr/dividerVertical"

            android:showDividers="middle"
            android:dividerPadding="1dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humiditiy"
                android:textColor="@android:color/black"/>
            <TextView
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:id="@+id/humid"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"/>
        </LinearLayout>
        <LinearLayout
            android:showDividers="middle"
            android:divider="?android:attr/dividerVertical"
            android:dividerPadding="1dp"
            android:weightSum="1"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequency"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:id="@+id/freq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"/>
        </LinearLayout>
        <LinearLayout
            android:textAlignment="center"

            android:showDividers="middle"
            android:dividerPadding="1dp"
            android:weightSum="1"
            android:divider="?android:attr/dividerVertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textColor="@android:color/black"/>
            <TextView
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:id="@+id/ac"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"/>
        </LinearLayout><LinearLayout
        android:weightSum="1"

        android:showDividers="middle"
        android:dividerPadding="1dp"
        android:divider="?android:attr/dividerVertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_weight="0.5"
            android:id="@+id/r"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"/>
    </LinearLayout><LinearLayout
        android:weightSum="1"

        android:showDividers="middle"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="G"
            android:textColor="@android:color/black"/>
        <TextView
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:id="@+id/g"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"/>
    </LinearLayout><LinearLayout
        android:divider="?android:attr/dividerVertical"
        android:weightSum="1"
        android:showDividers="middle"
        android:dividerPadding="1dp"

        android:textAlignment="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_weight="0.5"
            android:id="@+id/b"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"/>
    </LinearLayout><LinearLayout
        android:weightSum="1"
        android:showDividers="middle"
        android:dividerPadding="1dp"
        android:divider="?android:attr/dividerVertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance (cm)"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:id="@+id/dist"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"/>
    </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:orientation="horizontal"/>
<TextView
    android:layout_gravity="center"
    android:layout_margin="7dp"
    android:textSize="22sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/getStatement"
    android:textStyle="italic|bold"
    android:textColor="@android:color/holo_blue_light"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:orientation="horizontal"/>
    <ImageView
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imgshow"/>
</LinearLayout>
</ScrollView>